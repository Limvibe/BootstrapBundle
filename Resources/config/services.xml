<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    
  <parameters>
    <parameter key="iga.bootstrap.twig.bootstrap.class">Iga\BootstrapBundle\Twig\BootstrapExtension</parameter>
    <parameter key="iga_bootstrap.helper.class">Iga\BootstrapBundle\Twig\Extension\BootstrapExtension</parameter>
    <parameter key="iga_bootstrap.twig.class">Iga\BootstrapBundle\Twig\Extension\BootstrapExtension</parameter>
  </parameters>
    
  <services>
    <service id="iga.bootstrap.twig.bootstrap" class="%iga.bootstrap.twig.bootstrap.class%">
      <tag name="twig.extension" />
      <argument type="service" id="service_container" />
    </service>
    
    <service id="iga_bootstrap.helper" class="%iga_bootstrap.helper.class%">
      <argument type="service" id="templating" />
      <tag name="templating.helper" alias="bootstrap" />
    </service>
        

    <service id="iga_bootstrap.twig" class="%iga_bootstrap.twig.class%">
      <argument type="service" id="service_container" />
      <tag name="twig.extension" />
    </service>
  </services>

</container>
